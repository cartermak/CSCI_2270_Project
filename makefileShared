CC=gcc
CXX=g++ -Wall -Wextra -std=c++11 -g
RM=rm -f


SRCS=Connection.cpp mainMenu.cpp strmod.cpp SaveMethod.cpp wordSearch.cpp
OBJS=$(subst .cpp,.o,$(SRCS))

all: a.out

a.out: $(OBJS)
	$(CXX) $(LDFLAGS) -o share.so $(OBJS) $(LDLIBS) 

depend: .depend

.depend: $(SRCS)
	$(RM) ./.depend
	$(CXX) $(CPPFLAGS) -MM $^>>./.depend;

clean:
	$(RM) $(OBJS)

distclean: clean
	$(RM) *~ .depend

include .depend